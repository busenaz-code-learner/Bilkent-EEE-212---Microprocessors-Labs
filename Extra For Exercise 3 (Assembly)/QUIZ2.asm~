ORG 0000H

MOV R1, #40H
MOV DPTR , #WORD


LOOP:
CLR A
MOVC A, @A+DPTR
MOV @R1, A
JZ PALINDROME
INC R1
INC DPTR
SJMP LOOP


PALINDROME:
MOV R0, #40H
LENGHT:
MOV A,R1 
SUBB A, #40H 
PUSH A
DEC R1
MOV A, @R1
MOV 05H, @R0
CJNE A,05H,JUMP
POP A
MOV B, #2H
DIV AB 
INC R0
JZ JUMP2
SJMP LENGHT

JUMP2:
SETB P1.0
GO2: SJMP $

JUMP: 
CLR P1.0
GO: SJMP $


ORG 1000H
WORD: DB 'TACO CAT', 0
END 